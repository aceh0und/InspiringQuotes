<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 25
        padding: 10

        Label:
            id: quote_view
            text: "CLICK RED BUTTON TO GENERATE INSPIRING QUOTE"
            bold: True

            background_color: (0,0,1,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        Button:
            id: regen_quote
            text: "GENERATE QUOTE"
            background_normal: ""
            background_color: (1, 0, .2, 1)
            size_hint: (1, .5)
            on_press: root.generateQuote()